<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="16dp"
    android:layout_marginHorizontal="16dp"
    android:elevation="4dp"
    android:background="@drawable/card_background_2">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/movie_poster_iv"
        android:layout_width="100dp"
        android:layout_height="149.25dp"
        android:elevation="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/custom_poster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/curvedCornerRadiusStartOnly"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/movie_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        tools:text="Avengers Endgame"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/background_color"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/movie_poster_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/movie_release_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        tools:text="19-Aug-2003"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/background_color"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/movie_poster_iv"
        app:layout_constraintTop_toBottomOf="@id/movie_title_tv"/>


    <TextView
        android:id="@+id/movie_overview_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        tools:text="To save her father from certain death in the army. a young women secretly enlists in his place and become one of China's greatest heroines in teh process."
        android:maxLines="4"
        android:ellipsize="end"
        android:textColor="@color/background_color"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/movie_poster_iv"
        app:layout_constraintTop_toBottomOf="@id/movie_release_date_tv"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>