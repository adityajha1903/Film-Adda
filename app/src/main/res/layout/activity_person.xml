<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/included_app_bar"
            layout="@layout/simple_app_bar_layout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/included_app_bar">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                android:visibility="visible"
                tools:visibility="gone">

                <include
                    layout="@layout/shimmer_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.facebook.shimmer.ShimmerFrameLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_ui"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/person_profile_iv"
                        android:layout_width="100dp"
                        android:layout_height="149.25dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="8dp"
                        android:elevation="4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/custom_poster"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearanceOverlay="@style/curvedCornerRadius" />


                    <LinearLayout
                        android:id="@+id/ll1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@android:color/transparent"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toEndOf="@id/person_profile_iv"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">



                        <HorizontalScrollView
                            android:id="@+id/hsl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:scrollbars="none">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@android:color/transparent"
                                tools:ignore="TooDeepLayout">

                                <ImageButton
                                    android:id="@+id/homepage_btn"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/icon_bg"
                                    android:contentDescription="@string/add_to_favourite_list"
                                    android:elevation="4dp"
                                    android:layout_marginStart="16dp"
                                    android:src="@drawable/baseline_language_24"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/watchlist_btn"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:tint="@color/background_color"
                                    tools:ignore="TooDeepLayout" />

                                <ImageButton
                                    android:id="@+id/imdb_btn"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/icon_bg"
                                    android:contentDescription="@string/add_to_favourite_list"
                                    android:elevation="4dp"
                                    android:layout_marginStart="16dp"
                                    android:src="@drawable/imdb_foreground"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/watchlist_btn"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:tint="@color/background_color" />

                                <TextView
                                    android:id="@+id/facebook_btn"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_marginStart="16dp"
                                    android:background="@drawable/icon_bg"
                                    android:elevation="4dp"
                                    android:fontFamily="sans-serif-black"
                                    android:gravity="center"
                                    android:text="@string/f"
                                    android:textColor="@color/background_color"
                                    android:textSize="38sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/watchlist_btn"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:clickable="true"
                                    android:focusable="true"/>

                                <ImageButton
                                    android:id="@+id/instagram_btn"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/icon_bg"
                                    android:contentDescription="@string/add_to_favourite_list"
                                    android:elevation="4dp"
                                    android:layout_marginStart="16dp"
                                    android:src="@drawable/instagram"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/watchlist_btn"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:tint="@color/background_color" />

                                <ImageButton
                                    android:id="@+id/twitter_btn"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/icon_bg"
                                    android:contentDescription="@string/add_to_favourite_list"
                                    android:elevation="4dp"
                                    android:layout_marginStart="16dp"
                                    android:src="@drawable/twitter"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/watchlist_btn"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:tint="@color/background_color" />

                                <ImageButton
                                    android:id="@+id/wikipedia_btn"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/icon_bg"
                                    android:contentDescription="@string/add_to_favourite_list"
                                    android:elevation="4dp"
                                    android:layout_marginStart="16dp"
                                    android:src="@drawable/wikipedia"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/watchlist_btn"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:tint="@color/background_color"
                                    android:layout_marginEnd="16dp"/>
                            </LinearLayout>
                        </HorizontalScrollView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="12dp"
                            android:layout_marginStart="16dp"
                            android:background="@android:color/transparent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/known_for"
                                android:textColor="@color/background_color_rev"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/known_for_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/n_a"
                                android:textColor="@color/background_color_rev"
                                android:textSize="17sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="12dp"
                            android:layout_marginStart="16dp"
                            android:background="@android:color/transparent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gender"
                                android:textColor="@color/background_color_rev"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/gender_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/n_a"
                                android:textColor="@color/background_color_rev"
                                android:textSize="17sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="12dp"
                            android:layout_marginStart="16dp"
                            android:background="@android:color/transparent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/birthday"
                                android:textColor="@color/background_color_rev"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/birthday_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/n_a"
                                android:textColor="@color/background_color_rev"
                                android:textSize="17sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="12dp"
                            android:layout_marginStart="16dp"
                            android:background="@android:color/transparent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/place_of_birth"
                                android:textColor="@color/background_color_rev"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/place_of_birth_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/n_a"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:textColor="@color/background_color_rev"
                                android:textSize="17sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="100dp"
                        app:layout_constraintTop_toBottomOf="@+id/ll1"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/card_background_2"
                            android:elevation="4dp"
                            android:orientation="vertical"
                            tools:ignore="UselessParent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="8dp"
                                android:text="@string/biography"
                                android:textColor="@color/background_color"
                                android:textSize="19sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/icon_bg_color"/>

                            <TextView
                                android:id="@+id/biography_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="12dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="10dp"
                                tools:text="To save her father from certain death in the army. a young women secretly enlists in his place and become one of China's greatest heroines in teh process."
                                android:textColor="@color/background_color"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/card_background_2"
                            android:elevation="4dp"
                            android:orientation="vertical"
                            tools:ignore="UselessParent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="8dp"
                                android:text="@string/profiles"
                                android:textColor="@color/background_color"
                                android:textSize="19sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/icon_bg_color"/>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/profiles_rv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="4dp"
                                tools:listitem="@layout/images_recycler_item"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                        </LinearLayout>

                        <include
                            android:id="@+id/included_movie_credit"
                            layout="@layout/credits_layout"/>

                        <include
                            android:id="@+id/included_tv_credit"
                            layout="@layout/credits_layout"/>

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>