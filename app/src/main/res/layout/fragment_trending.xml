<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/Widget.MaterialComponents.CircularProgressIndicator"
            android:indeterminate="true"
            android:elevation="10dp"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="16dp">

            <include
                layout="@layout/shimmer_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.facebook.shimmer.ShimmerFrameLayout>

        <ScrollView
            android:id="@+id/main_ui"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_color"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".presentation.fragment.TrendingFragment"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/intro_fl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/introViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/search_btn"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/search_btn_bg"
                        android:elevation="5dp"
                        android:layout_marginHorizontal="32dp"
                        android:orientation="horizontal"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="35dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:contentDescription="@string/search"
                            android:src="@drawable/baseline_search_24"
                            android:padding="10dp"
                            app:tint="@color/background_color"
                            android:clickable="false"
                            android:focusable="false"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/search_tag"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginEnd="48dp"
                            android:textColor="@color/background_color"
                            android:gravity="center_vertical"
                            android:textSize="19sp"/>
                    </LinearLayout>

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/introTabLayout"
                        android:layout_width="120dp"
                        android:layout_height="10dp"
                        android:contentDescription="@string/tab_layout"
                        android:layout_gravity="bottom|center_horizontal"
                        app:tabGravity="center"
                        app:tabPaddingStart="6dp"
                        app:tabPaddingEnd="6dp"
                        app:tabIndicator="@null"
                        android:layout_marginBottom="12.5dp"
                        app:tabBackground="@drawable/selector_tab_indicator_dot"
                        android:background="@android:color/transparent"/>
                </FrameLayout>

                <include
                    android:id="@+id/trending_movies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/media_lists"
                    android:layout_marginTop="32dp"/>

                <include
                    android:id="@+id/trending_tv_shows"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/media_lists"
                    android:layout_marginTop="32dp"/>

                <include
                    android:id="@+id/trending_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/media_lists"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="16dp"/>
            </LinearLayout>

        </ScrollView>

    </FrameLayout>
</layout>