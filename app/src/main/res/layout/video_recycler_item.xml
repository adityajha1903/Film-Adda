<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/thumbnail_iv"
        android:layout_width="240dp"
        android:layout_height="135dp"
        android:elevation="2dp"
        android:scaleType="centerCrop"
        android:background="@color/grey"
        app:shapeAppearanceOverlay="@style/videoAndImages"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/icon_bg"
        android:contentDescription="@string/add_to_favourite_list"
        android:elevation="2dp"
        android:src="@drawable/baseline_play_arrow_24"
        app:tint="@color/background_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/thumbnail_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/video_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/background_color"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:text="Trailer"
        android:elevation="5dp"
        android:maxWidth="200dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/thumbnail_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>